<%= link_to post, class: "flex space-x-2 border-t-4 border-black px-2 py-4 hover:bg-yellow-100 dark:hover:bg-slate-700", id: dom_id(post) do %>
  <div class="flex-1">
    <div class="flex items-center justify-between">
      <span class="font-black lowercase"><%= post.user.name %></span>
      <%= timeago post.created_at, "text-xs" %>
    </div>
    <p><span class="font-black mr-1">&gt;</span><%= line_breaks post.body %></p>
  </div>
<% end %>
<div class="flex-1">
  <div class="flex items-center justify-between">
    <div class="flex-1">Total count of likes: <span id="users_likes_total_count_<%= post.id %>"><%= post.users_likes_total_count %></span></div>

    <% if current_user %>
      <div id="like-post-<%= post.id %>" class="flex-1">
        <%= render (post.liked_by?(current_user) ? 'liked': 'like'), post: post %>
      </div>
    <% end %>
  </div>
</div>

